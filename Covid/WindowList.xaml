<Window x:Class="Covid.WindowList"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Covid"
        mc:Ignorable="d"
        Title="WindowList" Height="450" Width="800" Background="Black">
    <Grid>
        <DataGrid x:Name="DataGrid_List" 
                  AutoGenerateColumns="False"
                  HorizontalAlignment="Stretch"   VerticalAlignment="Stretch" Margin="10,15,15,10">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding ID}" />
                    <DataGridTextColumn Header="Nazwa" Binding="{Binding Name}" />
                    <DataGridTextColumn Header="Miasto wykrycia" Binding="{Binding Name}" />
                    <DataGridTextColumn Header="Data objawow" Binding="{Binding DateResults}" />
                    <DataGridTextColumn Header="Data testu" Binding="{Binding DateTest}" />
                <DataGridTextColumn Header="Miasto kontaktu" Binding="{Binding CityConcact}" />
                <DataGridTextColumn Header="Data kontaktu" Binding="{Binding DateConcact}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
